  ],
  "shortcuts": [
    {
      "name": "Register Child",
      "short_name": "Register",
      "description": "Register new child for immunization",
      "url": "/?screen=register",
      "icons": [
        {
          "src": "/assets/icons/child-icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Vaccine Schedule",
      "short_name": "Schedule",
      "description": "View IA2030 vaccine schedule",
      "url": "/?screen=schedule",
      "icons": [
        {
          "src": "/assets/icons/schedule-icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Reports Dashboard",
      "short_name": "Reports",
      "description": "View immunization reports",
      "url": "/?screen=reports",
      "icons": [
        {
          "src": "/assets/icons/report-icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+immtrack",
      "url": "/?action=%s"
    }
  ],
  "launch_handler": {
    "client_mode": "auto"
  },
  "handle_links": "preferred",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "permissions": [
    "notifications",
    "clipboard-write",
    "clipboard-read",
    "background-sync",
    "periodic-background-sync"
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "iarc_rating_id": "e847c850-2c6c-4f15-8c3e-123456789012",
  "features": [
    "cross-origin-isolated",
    "web-share",
    "file-handling"
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link",
      "files": [
        {
          "name": "records",
          "accept": ["application/json", "text/csv"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      },
      "icons": [
        {
          "src": "/assets/icons/import-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "capture_links": "existing-client-navigate"
}